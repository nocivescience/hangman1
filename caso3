<!DOCTYPE html>
<html>

<body>
    <h1>Hangman Game</h1>
    <p id="word"></p>
    <input type="text" id="letter" size="1" maxlength="1">
    <button onclick="guess()">Guess</button>
    <p id="guessed"></p>
    <button onclick="reset()">Reset</button>
    <script>
        var words = ['python', 'java', 'hangman', 'computer', 'keyboard', 'geography', 'coding'];
        var word = words[Math.floor(Math.random() * words.length)];
        var answerArray = [];
        for (var i = 0; i < word.length; i++) {
            answerArray[i] = "_";
        }
        var remainingLetters = word.length;
        var guessedLetters = [];

        function guess() {
            var guess = document.getElementById("letter").value;
            document.getElementById("letter").value = "";
            if (guess.length !== 1) {
                alert("Please enter a single letter.");
            } else {
                for (var j = 0; j < word.length; j++) {
                    if (word[j] === guess && answerArray[j] === "_") {
                        answerArray[j] = guess;
                        remainingLetters--;
                    }
                }
                guessedLetters.push(guess);
                document.getElementById("guessed").innerHTML = "Guessed letters: " + guessedLetters.join(", ");
                document.getElementById("word").innerHTML = answerArray.join(" ");
                if (remainingLetters === 0) {
                    alert("Good job! The answer was " + word);
                }
            }
        }

        function reset() {
            location.reload();
        }

        document.getElementById("word").innerHTML = answerArray.join(" ");
    </script>
</body>

</html>